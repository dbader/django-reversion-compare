# see http://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{bat,cmd,ps1}]
end_of_line = crlf

[{Makefile,**.mk}]
indent_style = tab

[*.{html,scss,js}]
insert_final_newline = false

